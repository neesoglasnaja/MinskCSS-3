      +cover('pictures/blur-cover.jpg')
    +slide({header: "Этапы оценки", classes: "label-header"})
      ul
        li.next Подготовка
        li.next Оценка
        li.next Разработка
        li.next Анализ
    +slide({header: "<span class='label'>Подготовка</span>", shout: true, classes: 'cover'})
      +cover('pictures/preparations.jpg')
