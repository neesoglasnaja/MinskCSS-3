      ul
        li.next Составьте детальный структурированный список
    +slide({header: "<span class='label'>Таблица</span>", shout: true, classes: 'cover'})
    +slide({header: "<span class='label'>Оценка</span>", shout: true, classes: 'cover'})
    +slide({header: "Оценка", classes: "label-header"})
      ul
        li.next Задавайте вопросы
        li.next Декомпозируйте задачи
        li.next Учитывайте риски
    +slide({header: "<span class='label'>Схема</span>", shout: true, classes: 'cover'})
    +slide({header: "<span class='label'>Разработка</span>", shout: true, classes: 'cover'})
    +slide({header: "Разработка", classes: "label-header"})
      ul
        li.next Трекайте время
        li.next Делайте переоценки
    +slide({header: "<span class='label'>Анализ</span>", shout: true, classes: 'cover'})
    +slide({header: "Анализ", classes: "label-header"})
      ul
        li.next Анализируйте оцененное и реально затраченное время
        li.next Учитывайте коэффициент погрешности оценок
    +slide({header: "Коэффициент погрешности оценок", classes: "label-header"})
      table.formula
        tr
          th(rowspan="2") k =
          td затраченное
        tr
          td оцененное
    +slide({header: "<span class='label'>Задачи &times; Время &ne; Дедлайн</span>", shout: true, classes: 'cover'})
    +slide({header: "Что забыли?", classes: "label-header"})
      ul
        li.next Разработчик никогда не тратит все 100% рабочего времени на задачу
        ul
          li.next Интеграции
          li.next Деплой, git
          li.next Коммуникации
          li.next Тестирование
          li.next Кофе, туалет, проверка почты, общение с коллегами, прокрастинация
